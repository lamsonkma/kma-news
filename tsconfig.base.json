{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["apps/frontend/src/*"],
      "@kma-news/api-interface": ["libs/api-interface/src/index.ts"],
      "@kma-news/comment-slice": ["libs/comment-slice/src/index.ts"],
      "@kma-news/env-validation-schema": [
        "libs/env-validation-schema/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
